<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.news.mapper.CategoryMapper">

    <resultMap id="BaseResultMap" type="com.news.domain.pojo.Category">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="categoryName" column="category_name" jdbcType="VARCHAR"/>
            <result property="articlesNum" column="articles_num" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,category_name,articles_num
    </sql>
</mapper>
